{% extends 'default/layout.html.twig' %}
{% block content %}
    <div class="container">

        <div class="posts post-detail">

            <div class="post-meta clearfix">
                <div class="post-meta-author"><a
                            href="{{ path('show_provider',{'slug':promotion.provider.slug}) }}">{{ promotion.provider.slug }}</a></div>
                <!-- /.post-meta-author -->
                <div class="post-meta-date">du {{ promotion.fromDate|date('d-m-Y') }}</div><!-- /.post-meta-date -->
                <div class="post-meta-date">au {{ promotion.toDate|date('d-m-Y') }}</div><!-- /.post-meta-date -->
                <!-- /.post-meta-categories -->
            </div><!-- /.post-meta-categories -->


            <div class="post-content">
                <p class='drop-cap'>{{ promotion.description }}</p>
            </div><!-- /.post-content -->

            <div class="post-meta-tags clearfix">
                Tags:
                {% for p in promotion.provider.services %}
                    <ul>
                        <li class="tag"><a href="{{ path('show_service', {'slug':p.name}) }}">{{ p.name }}</a></li>
                    </ul>
                {% endfor %}
            </div><!-- /.post-meta -->


        </div>

    </div>

{% endblock %}