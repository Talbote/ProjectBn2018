<div class="mb80">
    <div class="hero-slider">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner" role="listbox">
                {% for p in providers %}

                    {% if loop.index0 == 0 %}
                        {% set active='active' %}
                    {% else %}
                        {% set active='' %}
                    {% endif %}
                    <div class="item {{ active }}" style="height:400px;">
                        <div class="item-bg" style="background-image: url({{ p.logo.url}})"></div>
                        <img src={{ p.logo.url }} alt="{{ p.name }}">
                        <div class="carousel-caption">
                            <div class="hero-slider-content">
                                <a href="{{ path('show_provider',{'slug':p.slug}) }}"><h1>{{ p.name }}</h1></a>


                            </div><!-- /.hero-slider-content -->

                            <div class="hero-slider-actions">
                                <a href="{{ path('show_provider',{'slug':p.slug}) }}"><i class="fa fa-search"></i></a>
                            </div><!-- /.hero-slider-actions -->
                        </div><!-- /.carousel-caption -->
                    </div><!-- /.item -->

                {% endfor %}
            </div><!-- /.carousel-inner -->

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <i class="fa fa-long-arrow-left"></i>
            </a>

            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <i class="fa fa-long-arrow-right"></i>
            </a>
        </div>
    </div><!-- /.hero-slider -->

</div>


