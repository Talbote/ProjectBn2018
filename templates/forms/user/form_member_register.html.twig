{# découpe formulaire modification profil #}
{% extends 'default/layout.html.twig' %}
{% block content %}

        <div class="row">
            <div class="col-sm-8 col-lg-12">
                <div class="content">
                    <br/>
                    <div class="page-title">
                        <h1>Bienvenue sur Annuaire Bien être </h1>
               </div><!-- /.page-title -->

                    <div class="background-white p20 mb30">
                        {{ form_start(form, {attr:{novalid : 'novalid'}}) }}
                        <h3 class="page-title">Votre Profil -> {{  typeuser|capitalize }}</h3>
                        <div class="row">

                            <div class="form-group col-sm-6">
                                {{ form_row(form.firstName) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(form.lastName) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(form.streetName) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(form.addressNo) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(form.locality) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(form.postalCode) }}
                            </div><!-- /.form-group -->

                            <div class="form-group col-sm-6">
                                {{ form_row(form.newsletter) }}

                            </div><!-- /.form-group -->


                            </div><!-- /.form-group -->
                        </div>
                        <div class="row">
                            <div>
                                {{ form_row(form.confirmed) }}
                            </div><!-- /.row -->
                        </div>
                        {{ form_end(form) }}
                    </div><!-- /.col-* -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div>

{% endblock %}