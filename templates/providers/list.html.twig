<div class="cards-simple-wrapper">
    <div class="row">

        {% for p in providers %}
            <div class="col-sm-6 col-md-4 col-lg-3">
                {% if p.logo is not empty %}
                <div class="card-simple" data-background-image={{ p.logo.image }}>
            {% else  %}
                <div class="card-simple" data-background-image={{asset('assets/img/tmp/detail-banner-1.jpg')}}>
                    {% endif %}
                    <div class="card-simple-background">
                        <div class="card-simple-content">
                            <h2><a href="{{ path('show_provider',{'slug':p.slug}) }}">{{ p.name }}</a></h2>

                            <div class="card-simple-actions">
                                <a href="{{ path('show_provider',{'slug':p.slug}) }}" class="fa fa-search"></a>
                            </div><!-- /.card-simple-actions -->
                        </div><!-- /.card-simple-content -->

                        <div class="card-simple-label">{{ p.locality.locality }}</div>

                        <div class="card-simple-price"><a style="color:#fff;"
                                                          href="http://www.{{ p.website }}">{{ p.website }}</a>
                        </div>

                    </div><!-- /.card-simple-background -->
                </div><!-- /.card-simple -->
            </div><!-- /.col-* -->
        {% endfor %}


    </div><!-- /.row -->


</div><!-- /.cards-simple-wrapper -->
